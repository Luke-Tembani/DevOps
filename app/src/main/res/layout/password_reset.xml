<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/resetpwdheader"
        android:layout_height="wrap_content"
        android:text ="Reset Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:fontFamily ="@font/poppins_thin"
        android:layout_marginLeft="10dp"
        android:textColor = "@color/black"
        android:textStyle ="bold"
        android:textSize ="20sp"
        />

    <TextView
        android:id="@+id/reset_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="A Reset link will be sent to your email"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/resetpwdheader"
        app:layout_constraintTop_toBottomOf="@+id/resetpwdheader"
         />

    <EditText
        android:id="@+id/reset_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/reset_note"
        app:layout_constraintEnd_toEndOf="@+id/reset_note"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/reset_note"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/reset_email"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/reset_email"
        app:layout_constraintTop_toBottomOf="@+id/reset_email">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:id="@+id/btnCancel"
            android:layout_height="wrap_content"
            android:background ="@drawable/white_background"
            android:layout_weight = "1"
            android:text ="Cancel"
            android:textSize ="15dp"
            android:layout_marginEnd = "5dp"
            android:textAllCaps ="false"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:id="@+id/btnReset"
            android:layout_height="wrap_content"
            android:background ="@drawable/blue_background"
            android:layout_weight = "1"
            android:textSize ="15dp"
            android:textColor ="@color/white"
            android:text ="Reset"
            android:layout_marginEnd = "5dp"
            android:textAllCaps ="false"
            />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>